{% extends 'cashman/base.html' %}
{% load staticfiles %}
{% block content %}


<div class="container">
    <div class="row">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Link Images with Category
            </div>
            <div class="panel-body">
                {% for i in images %}
                <div class="row">
                    <div class="col-md-6"> 
                            <img src="/media/{{ i.image }}" style="height:70px; width:120px;border:2px solid;" class="img img-thumbnail" />
                    </div>
                    <div class="col-md-6">
                        <select class="form-control">
                            <option value="">-- Select category</option>
                            {% for c in categories %}
                             <option value="{{ c.name }}">{{ c.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div><hr>    
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock content %}